{
  "name": "email-templates",
  "description":
    "Create, preview, and send custom email templates for Node.js. Highly configurable and supports automatic inline CSS, stylesheets, embedded images and fonts, and much more! Made for sending beautiful emails with Lad.",
  "version": "3.1.5",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
  "bugs": {
    "url": "https://github.com/niftylettuce/email-templates/issues",
    "email": "niftylettuce@gmail.com"
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)"
  ],
  "dependencies": {
    "@ladjs/i18n": "^0.0.5",
    "auto-bind": "^1.1.0",
    "consolidate": "^0.14.5",
    "debug": "^3.1.0",
    "fs-extra": "^4.0.2",
    "get-paths": "^0.0.2",
    "html-to-text": "^3.3.0",
    "juice": "^4.2.0",
    "juice-resources-promise": "^0.0.2",
    "lodash": "^4.17.4",
    "lodash.defaultsdeep": "^4.6.0",
    "lodash.isempty": "^4.4.0",
    "lodash.isfunction": "^3.0.8",
    "lodash.isobject": "^3.0.2",
    "lodash.isstring": "^4.0.1",
    "lodash.merge": "^4.6.0",
    "lodash.omit": "^4.5.0",
    "nodemailer": "^4.1.3"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cheerio": "^1.0.0-rc.2",
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.8.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "nyc": "^11.2.1",
    "prettier": "^1.7.4",
    "preview-email": "^0.0.5",
    "pug": "^2.0.0-rc.4",
    "remark-cli": "^4.0.0",
    "remark-preset-github": "^0.0.7",
    "xo": "^0.19.0"
  },
  "engines": {
    "node": ">=6.4.0"
  },
  "homepage": "https://github.com/niftylettuce/email-templates",
  "keywords": [
    "email",
    "lad",
    "lass",
    "koa",
    "pug",
    "consolidate",
    "template",
    "templates",
    "engine",
    "postmark",
    "sendgrid",
    "mailchimp",
    "mandrill",
    "transport",
    "nodemailer",
    "moonmail",
    "mailgun"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write --single-quote --trailing-comma none",
      "git add"
    ],
    "*.md": ["remark . -qfo", "git add"]
  },
  "main": "lib/index.js",
  "files": ["lib", "locales"],
  "remarkConfig": {
    "plugins": ["preset-github"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niftylettuce/email-templates"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "test": "npm run build && npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava",
    "build": "node_modules/.bin/babel src --out-dir lib",
    "watch": "node_modules/.bin/babel src --watch --out-dir lib"
  },
  "xo": {
    "extends": "prettier",
    "plugins": ["prettier"],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true
  }
}
